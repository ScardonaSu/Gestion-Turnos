@{
    ViewData["Title"] = "Su turno es";
    var hora = DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss");
}


<div class="container">

    <div class="row d-flex">
        <div class="col ">
            <p class="float-start">CC-@ViewBag.Documento</p>
            <p class="float-end">@hora</p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="text-center mx-auto col-sm-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">@ViewBag.Ticket</h1>
                </div>
                <div class="card-footer">
                    <a asp-controller="Turnos" asp-action="Index" asp-route-turno="@ViewBag.Turno"
                        class="btn btn-lg btn-dark">Volver</a>
                </div>
            </div>
        </div>
    </div>